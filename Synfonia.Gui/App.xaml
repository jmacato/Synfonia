<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Synfonia" x:Class="Synfonia.App">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
      <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml" />
      <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseDark.xaml" />
        <StyleInclude Source="avares://Avalonia.Themes.Fluent/Accents/FluentDark.xaml" />
        <StyleInclude Source="avares://Synfonia.Gui/Assets/Icons.xaml" />
        <StyleInclude Source="avares://Synfonia.Gui/Assets/GlobalStyles.xaml" />
        <StyleInclude Source="avares://Synfonia.Gui/Controls/SeekSlider.xaml" />
        <StyleInclude Source="avares://Synfonia.Gui/Controls/VolumeSlider.xaml" />
        <StyleInclude Source="avares://Synfonia.Gui/Controls/MetroWindow.xaml" />
    </Application.Styles>
    <NativeMenu.Menu>
        <NativeMenu />
    </NativeMenu.Menu>
</Application>