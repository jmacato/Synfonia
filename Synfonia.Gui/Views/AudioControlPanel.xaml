<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="800" Name="audioControl" d:DesignHeight="450" x:Class="Synfonia.Views.AudioControlPanel">
    <Panel>
        <Panel.Styles>
            <Style Selector=":is(Button)">
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>
        </Panel.Styles>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <ToggleButton Name="ShuffleButton" Width="36">
                <DrawingPresenter Width="20" Height="15" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </ToggleButton>
            <Button Name="BackButton" HorizontalAlignment="Center" Width="36" Command="{Binding BackCommand}">
                <DrawingPresenter Width="20" Height="10" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Button>
            <Button Name="PlayButton" HorizontalAlignment="Center" Width="36" Command="{Binding PlayCommand}">
                <Panel>
                    <DrawingPresenter Drawing="{DynamicResource Play}" IsVisible="{Binding !IsPlaying}" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    <DrawingPresenter Drawing="{DynamicResource Pause}" IsVisible="{Binding IsPlaying}" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center" />
                </Panel>
            </Button>
            <Button Name="FwdButton" HorizontalAlignment="Center" Width="36" Command="{Binding ForwardCommand}">
                <DrawingPresenter Width="20" Height="10" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </Button>
            <ToggleButton Name="LoopButton" Width="36">
                <DrawingPresenter Width="20" Height="15" VerticalAlignment="Center" HorizontalAlignment="Center" />
            </ToggleButton>
            <Panel Width="14" />
        </StackPanel>
    </Panel>
</UserControl>