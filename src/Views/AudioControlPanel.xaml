<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Synfonia.Views.AudioControlPanel">
  <Panel>
    <Panel.Styles>
      <Style Selector=":is(Button):not(:pointerover):not(:pressed)">
        <Setter Property="Background" Value="Transparent"/>
      </Style>
    </Panel.Styles>
    <Image Opacity="0.25" Source="avares://Synfonia/Assets/AudioControlsViewMock.png" IsVisible="False"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <ToggleButton Width="36" BorderThickness="0">
    
      </ToggleButton>
      <Button HorizontalAlignment="Center" Width="54" Command="{Binding BackCommand}" BorderThickness="0">
        
      </Button>
      <Button HorizontalAlignment="Center" Width="54" Command="{Binding PlayCommand}" BorderThickness="0">
 
       </Button>
      <Button HorizontalAlignment="Center" Width="54" Command="{Binding ForwardCommand}" BorderThickness="0">
         
      </Button>
      <ToggleButton Width="36" BorderThickness="0">
         
      </ToggleButton>
    </StackPanel>
  </Panel>
</UserControl>
